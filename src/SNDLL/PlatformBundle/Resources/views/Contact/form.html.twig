{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

{% if form_errors(form) %}
    <div class="alert alert-warning" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        {{ form_errors(form) }}
    </div>
{% endif %}
<div class="row col-md-12">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">Informations Contact</div>
            <div class="panel-body">
                <div class="form-group col-md-12">
                    {{ form_label(form.civilite, "Civilite *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.civilite) }}
                    {{ form_widget(form.civilite, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_label(form.nom, "Nom *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_label(form.prenom, "Prénom *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.prenom) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_label(form.role, "Role *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.role) }}
                    {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_label(form.commentaires, "Commentaires", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.commentaires) }}
                    {{ form_widget(form.commentaires, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">Coordonnées Contact</div>
            <div class="panel-body">
                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.adresse, "Rue", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.adresse) }}
                    {{ form_widget(form.coordonnees.adresse, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.codepostal, "Code postal", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.codepostal) }}
                    {{ form_widget(form.coordonnees.codepostal, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.ville, "Ville", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.ville) }}
                    {{ form_widget(form.coordonnees.ville, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.informationscomplementaires, "Renseignements supplémentaires sur l'adresse", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.informationscomplementaires) }}
                    {{ form_widget(form.coordonnees.informationscomplementaires, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.telephoneprincipal, "Téléphone fixe", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.telephoneprincipal) }}
                    {{ form_widget(form.coordonnees.telephoneprincipal, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.telephonesecondaire, "Téléphone portable", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.telephonesecondaire) }}
                    {{ form_widget(form.coordonnees.telephonesecondaire, {'attr': {'class': 'form-control'}}) }}
                </div>


                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.fax, "Fax", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.fax) }}
                    {{ form_widget(form.coordonnees.fax, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.email, "Email", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.email) }}
                    {{ form_widget(form.coordonnees.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.autorisation, "Autorisation d'utilisation des coordonnées *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.autorisation) }}
                    {{ form_widget(form.coordonnees.autorisation, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>
</div>

<p>
    {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
</p>

{{ form_rest(form) }}

{{ form_end(form) }}

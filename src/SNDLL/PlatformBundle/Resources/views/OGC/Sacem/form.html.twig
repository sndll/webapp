<div class="row col-md-12">

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {% if form_errors(form) %}
        <div class="alert alert-warning" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">Centre Sacem</div>
            <div class="panel-body">
                {% if form.codesacem is defined %}
                    <div class="form-group col-md-12">
                        {{ form_label(form.codesacem, "Code du centre SACEM *", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.codesacem) }}
                        {{ form_widget(form.codesacem, {'attr': {'class': 'form-control'}}) }}
                    </div>
                {% endif %}
                <div class="form-group col-md-12">
                    {{ form_label(form.libelle, "Libelle centre SACEM *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.libelle) }}
                    {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_label(form.civilite, "Civilite *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.civilite) }}
                    {{ form_widget(form.civilite, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_label(form.nomresponsable, "Nom responsable *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.nomresponsable) }}
                    {{ form_widget(form.nomresponsable, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_label(form.prenomresponsable, "Prénom responsable *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.prenomresponsable) }}
                    {{ form_widget(form.prenomresponsable, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">Coordonnées Centre Sacem</div>
            <div class="panel-body">
                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.adresse, "Rue *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.adresse) }}
                    {{ form_widget(form.coordonnees.adresse, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.codepostal, "Code postal *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.codepostal) }}
                    {{ form_widget(form.coordonnees.codepostal, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.ville, "Ville *", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.ville) }}
                    {{ form_widget(form.coordonnees.ville, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.informationscomplementaires, "Informations complémentaires", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.informationscomplementaires) }}
                    {{ form_widget(form.coordonnees.informationscomplementaires, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.telephoneprincipal, "Téléphone", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.telephoneprincipal) }}
                    {{ form_widget(form.coordonnees.telephoneprincipal, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.fax, "Fax", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.fax) }}
                    {{ form_widget(form.coordonnees.fax, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_label(form.coordonnees.email, "Email", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.coordonnees.email) }}
                    {{ form_widget(form.coordonnees.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>
</div>

<p>
    {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
</p>

{{ form_rest(form) }}

{{ form_end(form) }}
{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Web-App du SNDLL{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% stylesheets
      '@SNDLLPlatformBundle/Resources/public/css/*'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
  {% endblock %}
</head>

<body>
  <div class="container">
    <div id="header" class="jumbotron">
        <div class="row">
            <div class="col-md-3">
                <img src="{{ app.request.getBasePath() }}/images/Logo.png" />
            </div>
            <div class="col-md-9">
                <h1>La plateforme de gestion du SNDLL</h1>
            </div>
        </div>
      <p>
		    L'application de gestion du Syndicat National des Discothèques et des Lieux de Loisirs
      </p>
    </div>

    <div class="row">
      <div id="menu" class="col-md-3">
        <ul class="nav nav-pills nav-stacked">
            <li role="presentation" {% if app.request.attributes.get('_route') starts with 'sndll_etablissement' or app.request.attributes.get('_route') starts with 'sndll_contact' or app.request.attributes.get('_route') starts with 'sndll_platform_homepage' %}class="active"{% endif %}><a href="{{ path('sndll_etablissement') }}">Gérer les établissements</a></li>
            <li role="presentation" {% if app.request.attributes.get('_route') starts with 'sndll_cotisation' or app.request.attributes.get('_route') starts with 'sndll_typeadhesion' %}class="active"{% endif %}><a href="{{ path('sndll_cotisation') }}">Gérer les cotisations</a></li>
            <li role="presentation" {% if app.request.attributes.get('_route') starts with 'sndll_ogc_sacem' %}class="active"{% endif %}><a href="{{ path('sndll_ogc_sacem') }}">Menu Sacem</a></li>
            <li role="presentation" {% if app.request.attributes.get('_route') starts with 'sndll_ogc_spre' %}class="active"{% endif %}><a href="{{ path('sndll_ogc_spre_view') }}">Menu Spre</a></li>
            <li role="presentation" {% if app.request.attributes.get('_route') starts with 'sndll_platform_stats' %}class="active"{% endif %}><a href="{{ path('sndll_platform_stats') }}">Statistiques</a></li>
            <li role="presentation" {% if app.request.attributes.get('_route') starts with 'sndll_site' %}class="active"{% endif %}><a href="{{ path('sndll_site') }}">Menu Site Internet</a></li>
            <li role="presentation"><a href="https://twitter.com/SNDLLactu">Accéder au twitter du SNDLL</a></li>
        </ul>
      </div>

      <div id="content" class="col-md-9">
        {% block body %}
        {% endblock %}
      </div>
    </div>

    <div id="footer" class="col-md-12">
      <p>
        Réalisé par le SNDLL © {{ 'now'|date('Y') }} tous droits réservés.
      </p>
    </div>
  </div>

    {% block javascripts %}
        {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

        {% javascripts '@SNDLLPlatformBundle/Resources/public/js/*' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</body>
</html>